@model IEnumerable<SuperMerk2.Models.Producto>

@{
    ViewBag.Title = "ListProductos";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string Accion = "";
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/Producto/ListProducto.css" rel="stylesheet" />
    <title> Lista Productos</title>
</head>
<body>
    <p>
        <a><i class='bx bx-message-square-add'> </i>@Html.ActionLink("Crear Nuevo Producto", "CreateProducto", "Producto")</a>
    </p>
    <div class="dataTable-Container">
        <table class="datatable">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.categoria.nombreCategoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.stockDisponible)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precio)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoria.nombreCategoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.imagen)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.stockDisponible)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>

                        @Html.ActionLink("Editar", "EditProducto", "Producto", new { id = item.productoId }, new { }) |
                        @Html.ActionLink("Detalle", "DetalleProducto", "Producto", new { id = item.productoId }, new { }) |
                        @if (item.Habilitado)
                        {
                            @Html.ActionLink("Eliminar", "EliminarProductos", "Producto", new { id = item.productoId }, new { })
                        }
                        else
                        {
                            @Html.ActionLink("Reactivar", "ReactivarProductos", "Producto", new { id = item.productoId }, new { })
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>




