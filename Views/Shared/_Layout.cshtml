@using SuperMerk2.Models;
@{ 
    var carrito = Session["Carrito"] as Carrito;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Normalize.css" rel="stylesheet" />
    <link href="~/Content/Layout/Layout.css" rel="stylesheet" />
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <title> Home </title>

</head>
<body>

    <nav class="nav">
        <div class="nav__container">
            <div class="logo">
                <img src="~/Content/Imagenes/kisspng-portable-network-graphics-supermarket-image-comput-cajas-supermercado-la-tienda-inteligente-5ba47f231cda63.7889709115375071071182.png" />
                <p style="color:#000;" class="nav-title">SuperMarket</p>
            </div>
            @{SuperMerk2.Models.Usuario usuario = Session["UserSession"] as SuperMerk2.Models.Usuario; }
            <ul class="nav__ul">
                <li class="nav__li"><a>@Html.ActionLink("Inicio", "Index", "Home")</a></li>
                <li class="nav__li"><a> @Html.ActionLink("Productos", "ListAllProductos", "Producto")</a></li>
                <li class="nav__li"><a>@Html.ActionLink("Carrito", "MostrarCarrito", "Carrito")</a></li>
                @if (usuario.esAdmin && usuario != null)
                {
                    <li class="nav__li"><a>@Html.ActionLink("Admin", "Admin", "Admin")</a></li>
                }
            <li class="nav__li">@Html.ActionLink("LogOut", "LogOut", "Login")</li>

            </ul>

            <i class='bx bx-shopping-bag bx-flip-horizontal'></i>
            @if (carrito != null)
            {
                <p style="color:#000 ;" class="nav-carrito">@carrito.listaProductosCarrito.Count</p>
            }
            else
            {
                <p style="color:#000 ;" class="nav-carrito">0</p>
            }
            <hr />

        </div>
        <div nombre="navresponsive" class="nav__responsive">
            <div class="nav__responsive-container">
                <div class="logo">
                    <img src="~/Content/Imagenes/kisspng-portable-network-graphics-supermarket-image-comput-cajas-supermercado-la-tienda-inteligente-5ba47f231cda63.7889709115375071071182.png" />
                    <p style="color:#000 ;" class="nav-title">SuperMarket</p>
                </div>
                <div class="nav__responsive-button">
                    <i id="btnMenu" class='bx bx-menu'></i>
                </div>
                <div id="menuresponse" class="nav__responsive-div">
                    <ul class="nav__responsive-ul">
                        <li class="nav__li"><a>@Html.ActionLink("Inicio", "Index", "Home")</a></li>
                        <li class="nav__li"><a>@Html.ActionLink("Productos", "Index", "Home")</a></li>
                        <li class="nav__li"><a>@Html.ActionLink("Carrito", "MostrarCarrito", "Carrito")</a></li>
                        <li class="nav__responsive-li-carrito">
                            <i class='bx bx-shopping-bag bx-flip-horizontal'></i>
                            <p style="color:#000 ;" class="nav__responsive-carrito">0</p>
                        </li>
                        @if (usuario.esAdmin)
                        {
                        <li class="nav__responsive-li"><a>@Html.ActionLink("Admin", "Admin", "Admin")</a></li>
                        }
                        <li class="nav__nav__responsive-li"><a>@Html.ActionLink("LogOut", "LogOut", "Login")</a></li>

                    </ul>
                    <hr />
                </div>

            </div>
        </div>
    </nav>
    <br />
    <br />
    <div class="container">
        @RenderBody()
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Supermercado</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script>
        $("#btnMenu").click(function () {
            $("#menuresponse").toggleClass("active");
        })
    </script>
</body>
</html>
